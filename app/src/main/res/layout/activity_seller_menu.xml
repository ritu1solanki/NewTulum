<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerMenu">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <androidx.cardview.widget.CardView
            android:id="@+id/bt"
            android:layout_width="316dp"
            android:layout_height="182dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:visibility="visible"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">
            <RelativeLayout
                android:background="@drawable/gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <TextView
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/josefinsansregular"
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="82dp"
                    android:gravity="center_horizontal"
                    android:text="Shop"
                    android:textColor="@color/CreamColor"
                    android:textSize="40sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ct"
            android:layout_width="316dp"
            android:layout_height="182dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:visibility="visible"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">
            <RelativeLayout
                android:background="@drawable/redgrad"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="Brew Guides"
                    android:textColor="@color/CreamColor"
                    android:textSize="40dp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dict"
            android:layout_width="316dp"
            android:layout_height="182dp"
            android:layout_below="@+id/ct"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"

            android:visibility="visible"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">
            <RelativeLayout
                android:background="@drawable/yellograd"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="Dictionary"
                    android:textColor="@color/CreamColor"
                    android:textSize="40dp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/rowcards"
            android:layout_width="316dp"
            android:layout_height="182dp"
            android:layout_below="@+id/dict"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"

            android:visibility="visible"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">
            <RelativeLayout
                android:background="#888281"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="Row Cards"
                    android:textColor="@color/CreamColor"
                    android:textSize="40dp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>





        <ImageButton

            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:src="@drawable/logout1"
            android:layout_below="@+id/dict"
            android:layout_marginLeft="220dp"
            android:scaleX="0.3"
            android:scaleY="0.3"



            />
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:background="@drawable/back"
            android:id="@+id/back"
            />


    </RelativeLayout>



</ScrollView>