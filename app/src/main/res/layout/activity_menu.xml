<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".Menu">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <androidx.cardview.widget.CardView
            android:id="@+id/bt"
            android:layout_width="316dp"
            android:layout_height="182dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:visibility="visible"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">
            <RelativeLayout
                android:background="@drawable/gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/brewtimer"
                    android:layout_marginLeft="271dp"
                    />



                <TextView
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/josefinsansregular"
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="82dp"
                    android:gravity="center_horizontal"
                    android:text="Brew Timer"
                    android:textColor="@color/CreamColor"
                    android:textSize="40sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ct"
            android:layout_width="316dp"
            android:layout_height="182dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:visibility="visible"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">
            <RelativeLayout
                android:background="@drawable/redgrad"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="79dp"

                    android:fontFamily="@font/josefinsansregular"
                    android:text="Brew Guides"
                    android:textColor="@color/CreamColor"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/coffeetracker"
                    android:layout_marginLeft="271dp"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bg"
            android:layout_width="155dp"
            android:layout_height="240dp"

            android:layout_marginLeft="50dp"
            android:layout_marginTop="450dp"

            android:visibility="visible"

            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">
            <RelativeLayout
                android:background="@drawable/greengrad"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="109dp"

                    android:layout_height="72dp"
                    android:layout_marginTop="180dp"
                    android:layout_marginLeft="10dp"

                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="Shop"
                    android:textColor="@color/CreamColor"
                    android:textSize="27dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/shop"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="5dp"

                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cc"
            android:layout_width="155dp"
            android:layout_height="115dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="709dp"
            android:visibility="visible"

            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">
            <RelativeLayout
                android:background="@drawable/maroongrad"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="143dp"
                    android:layout_alignParentBottom="true"
                    android:layout_height="74dp"
                   android:layout_marginLeft="10dp"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="Coffee Cupping"
                    android:textColor="@color/CreamColor"
                    android:textSize="27dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/cupping"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="5dp"

                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/cr"
            android:layout_width="155dp"
            android:layout_height="115dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="450dp"
            android:visibility="visible"

            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">
            <RelativeLayout
                android:background="@drawable/yellograd"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/josefinsansregular"
                    android:text="Coffee Dictionary"
                    android:textColor="@color/CreamColor"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/coffeerecipes"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="5dp"

                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/rc"
            android:layout_width="155dp"
            android:layout_height="240dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="580dp"
            android:visibility="visible"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">
            <RelativeLayout
                android:background="@drawable/graygrad"
                android:layout_width="160dp"
                android:layout_height="240dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/josefinsansregular"
                    android:gravity="bottom"
                    android:text="Row
                    Cards"
                    android:textColor="@color/CreamColor"
                    android:textSize="27dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rowcards"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="5dp"

                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <ImageButton

            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:src="@drawable/logout1"
            android:layout_below="@id/rc"
            android:layout_marginLeft="220dp"
            android:scaleX="0.3"
            android:scaleY="0.3"



            />
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:background="@drawable/back"
            android:id="@+id/logoutbtn"
            />


    </RelativeLayout>


</ScrollView>
