<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainSellerActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

    <TextView
        android:id="@+id/tv"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/josefinsansregular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ADD PRODUCT"
        android:textSize="40sp"
        android:textStyle="bold"
        android:padding="20dp"

        android:textColor="@color/Black" />

     <ImageView
         android:id="@+id/productimage"
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:src="@drawable/ic_baseline_add_product"
         android:layout_gravity="center_horizontal">

     </ImageView>

      <EditText
          android:id="@+id/titleet"
          android:layout_width="350dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:hint="Title"
          android:textSize="20dp"
          />
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/descripet"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Description"
            android:textSize="20dp"
            />
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/categoryet"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Category"
            android:textSize="20dp"
            />
       <!-- <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/qtyet"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Quantity"
            android:textSize="20dp"
            />-->
        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/priceet"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Price"
            android:textSize="20dp"
            />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/discountet"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Discount"
            android:textSize="20dp"
            />

        <Button

            android:id="@+id/addproduct"
            android:layout_width="130dp"
            android:layout_marginTop="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/redbutton"
            android:text="ADD PRODUCT"
            android:textColor="@color/CreamColor"
            />



    <ImageButton
        android:layout_marginTop="10dp"
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:src="@drawable/logout1"

        android:layout_marginLeft="220dp"
        android:scaleX="0.3"
        android:scaleY="0.3"/>
    </LinearLayout>


</ScrollView>